@model DSRFQ.Membership.InviteEmailModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Welcome to DSRFQ! Activate Your Account</title>
    <style>
        /* Base styles */
        body {
            margin: 0;
            padding: 0;
            background-color: #f4f7f6;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }
        table {
            border-spacing: 0;
        }
        td {
            padding: 0;
        }
        img {
            border: 0;
        }
        .wrapper {
            width: 100%;
            table-layout: fixed;
            background-color: #f4f7f6;
            padding-bottom: 60px;
        }
        .main {
            background-color: #ffffff;
            margin: 0 auto;
            width: 100%;
            max-width: 600px;
            border-spacing: 0;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            color: #333333;
        }
        .two-columns {
            text-align: center;
            font-size: 0;
        }
        .two-columns .column {
            width: 100%;
            max-width: 300px;
            display: inline-block;
            vertical-align: top;
        }
        a {
            color: #007bff;
            text-decoration: none;
        }
        .button {
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            padding: 15px 25px;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
        }
    </style>
</head>
<body>

    <div style="display:none;font-size:1px;color:#333333;line-height:1px;max-height:0px;max-width:0px;opacity:0;overflow:hidden;">
        You're just one step away from joining DSRFQ. Let's get you started!
    </div>

    <center class="wrapper">

        <table class="main" width="100%">

            <tr>
                <td style="padding: 20px 0; text-align: center; background-color: #ffffff;">
                    
                   <img src="@($"{@Model.BaseUrl}/Content/site/logo.png")"
                        alt="DSRFQ Logo"
                        width="180"
                        style="max-width: 100%;">
                </td>
            </tr>

            <tr>
                <td style="padding: 20px 30px 10px 30px; text-align: center;">
                    <h1 style="font-size: 28px; font-weight: bold; color: #1e2a3b; margin: 0;">Welcome to DSRFQ!</h1>
                </td>
            </tr>

            <tr>
                <td style="padding: 10px 30px 20px 30px; text-align: left;">
                    <p style="font-size: 16px; line-height: 1.5; color: #555555; margin: 0;">Hi @Model.EmailAddress,</p>
                    <p style="font-size: 16px; line-height: 1.5; color: #555555; margin-top: 15px;">
                        We're excited to have you on board. We received a request to create a new account for your organization on the DSRFQ platform.
                    </p>
                    <p style="font-size: 16px; line-height: 1.5; color: #555555; margin-top: 15px;">
                        To complete your setup and start streamlining your procurement process, please activate your account by clicking the button below.
                    </p>
                </td>
            </tr>

            <tr>
                <td style="padding: 20px 30px; text-align: center;">
                    <a href="@Model.ActivateLink" class="button" style="background-color: #007bff; color: #ffffff; text-decoration: none; padding: 15px 25px; border-radius: 5px; font-weight: bold; display: inline-block;">Activate Your Account</a>
                </td>
            </tr>
            
            <tr>
                <td style="padding: 0px 30px 30px 30px; text-align: center;">
                    <p style="font-size: 12px; color: #999999;">
                        If the button doesn't work, copy and paste this link into your browser:
                        <br>
                        <a href="@Model.ActivateLink" style="color: #007bff; text-decoration: underline; word-break: break-all;">@Model.ActivateLink</a>
                    </p>
                </td>
            </tr>

            <tr>
                 <td style="padding: 0 30px 30px 30px; border-top: 1px solid #eeeeee;">
                    <p style="font-size: 14px; line-height: 1.5; color: #555555; margin-top: 30px;">
                        If you did not request this, please disregard this email. Your account will not be created, and your email address will be removed from our temporary records.
                    </p>
                 </td>
            </tr>

            <tr>
                <td style="background-color: #1e2a3b; padding: 30px 20px;">
                    <table width="100%">
                        <tr>
                            <td style="text-align: center; color: #bbbbbb;">
                                <p style="font-size: 12px; margin: 0;">
                                    &copy; @DateTime.Now.Year Digitalise One Pte Ltd. All rights reserved.
                                </p>
                                <p style="font-size: 12px; margin: 10px 0 0 0;">
                                    123 Innovation Drive, Tech Park, 12345
                                </p>
                                <p style="font-size: 12px; margin: 10px 0 0 0;">
                                    <a href="https://yourwebsite.com/support" target="_blank" style="color: #ffffff; text-decoration: underline;">Contact Support</a> | 
                                    <a href="https://yourwebsite.com/privacy" target="_blank" style="color: #ffffff; text-decoration: underline;">Privacy Policy</a>
                                </p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

        </table>

    </center>

</body>
</html>